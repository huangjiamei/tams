<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:beans="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:jee="http://www.springframework.org/schema/jee" xmlns:jms="http://www.springframework.org/schema/jms"
       xmlns:lang="http://www.springframework.org/schema/lang" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:oxm="http://www.springframework.org/schema/oxm" xmlns:task="http://www.springframework.org/schema/task"
       xmlns:tx="http://www.springframework.org/schema/tx" xmlns:util="http://www.springframework.org/schema/util"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                           http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
                           http://www.springframework.org/schema/jms
                           http://www.springframework.org/schema/jms/spring-jms-3.0.xsd
                           http://www.springframework.org/schema/lang
                           http://www.springframework.org/schema/lang/spring-lang-3.0.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                           http://www.springframework.org/schema/oxm
                           http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
                           http://www.springframework.org/schema/task
                           http://www.springframework.org/schema/task/spring-task-3.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="TestHeader" parent="Uif-ApplicationHeaderBase" p:additionalCssClasses="navbar-fixed-top">
        <property name="applicationNavigation.brandImage">
            <bean parent="Uif-Image" p:style="width:150px;margin: 2px 5px;"
                  p:source="@{#ConfigProperties['application.url']}/images/logo.png" />
        </property>
        <property name="applicationNavigation.brandUrl" value="http://www.cqu.edu.cn" />

        <property name="applicationNavigation.items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="当前学期："  p:additionalCssClasses="headerMessage"/>
                <bean parent="Uif-MessageField"  p:messageText="2016-2017第一学期" p:additionalCssClasses="headerMessage"/>
                <bean parent="Uif-ActionLink" p:iconClass="icon-th" p:additionalCssClasses="mainMenu"
                      p:actionScript="showDialog('navDialog');"/>
            </list>
        </property>
        <!--不知道这是什么但是一删就报错-->
        <property name="applicationToolbar">
            <bean id="toobar" parent="PortalToolbar" />
        </property>
    </bean>
    <!--不知道这是什么但是一删就报错-->
    <bean id="PortalToolbar" parent="Uif-CssGridGroup" p:render="@{!renderedInDialog}">
        <property name="template"
                  value="/krad/WEB-INF/ftl/components/group/groupContentWrap.ftl" />
        <property name="templateName" value="uif_groupContentWrap" />
        <property name="cssClasses">
            <list merge="true">
                <value>toolbar</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-ListGroup"
                      p:layoutManager.additionalCssClasses="nav,pull-right">
                    <property name="items">
                        <list merge="true">
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="navDialog" parent="Uif-DialogGroup"
          p:dialogCssClass="navigationDialog"
          p:onShowDialogScript="initNavDialog();"
          p:style="z-index:9999;overflow-y:hidden;">
        <property name="layoutManager">
            <bean parent="Uif-VerticalBoxLayout" />
        </property>
        <property name="items">
            <list>
                <bean parent="megamenu-items"/>
            </list>
        </property>

    </bean>


    <bean id="megamenu-items" parent="Uif-VerticalBoxSection" p:additionalCssClasses="">
        <property name="items">
            <list>
                <bean id="megamenu-content" parent="Uif-VerticalBoxSection" p:additionalCssClasses="esmenu-content">
                    <property name="items">
                        <list>
                            <bean  parent="Uif-VerticalBoxSection" p:additionalCssClasses="tabbable row">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3">
                                            <property name="items">
                                                <list>
                                                    <bean  parent="Uif-MenuList" p:additionalCssClasses="nav" >
                                                        <property name="items">
                                                            <list>

                                                                <bean parent="Uif-Link" p:href="#nav-course"
                                                                      p:linkText="课程管理"/>
                                                                <bean parent="Uif-Link" p:href="#nav-admin"
                                                                      p:linkText="管理台"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>

                                        <bean  parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-9 menu-sub-items">
                                            <property name="items">
                                                <list>
                                                    <bean  parent="Uif-VerticalBoxSection" p:additionalCssClasses="tab-content">
                                                        <property name="items">
                                                            <list>
                                                                <!--放置切换的导航栏-->
                                                                <bean  id="nav-course" parent="Uif-VerticalBoxSection" p:additionalCssClasses="tab-pane active">
                                                                    <property name="items">
                                                                        <list>

                                                                            <bean   parent="Uif-HorizontalBoxSection" p:additionalCssClasses="box-header visible-sm visible-xs menu-box-header">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <bean parent="Uif-Icon" p:iconClass="icon-info"/>
                                                                                        <bean parent="Uif-MessageField" p:messageText="课程管理"
                                                                                              p:additionalCssClasses="boxheaderTitle"/>
                                                                                        <bean parent="Uif-ActionLink" p:actionLabel="×"
                                                                                              p:additionalCssClasses="close pull-right"/>
                                                                                    </list>
                                                                                </property>
                                                                            </bean>

                                                                            <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3 col-sm-4 col-xs-12">
                                                                                            <property name="items">
                                                                                                <list>

                                                                                                    <bean   parent="ClassMap"/>
                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>
                                                                                        <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3 col-sm-4 col-xs-12">
                                                                                            <property name="items">
                                                                                                <list>
                                                                                                    <bean   parent="ClassMap"/>


                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>
                                                                                        <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3 col-sm-4 col-xs-12">
                                                                                            <property name="items">
                                                                                                <list>

                                                                                                    <bean   parent="ClassMap"/>

                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>




                                                                                    </list>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>

                                                                <bean  id="nav-admin" parent="Uif-VerticalBoxSection" p:additionalCssClasses="tab-pane">
                                                                    <property name="items">
                                                                        <list>


                                                                            <bean   parent="Uif-HorizontalBoxSection" p:additionalCssClasses="box-header visible-sm visible-xs menu-box-header">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <bean parent="Uif-Icon" p:iconClass="icon-info"/>
                                                                                        <bean parent="Uif-MessageField" p:messageText="管理台"
                                                                                              p:additionalCssClasses="boxheaderTitle"/>
                                                                                        <bean parent="Uif-ActionLink" p:actionLabel="×"
                                                                                              p:additionalCssClasses="close pull-right "/>
                                                                                    </list>
                                                                                </property>
                                                                            </bean>



                                                                            <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3 col-sm-4 col-xs-12">
                                                                                            <property name="items">
                                                                                                <list>
                                                                                                    <bean   parent="AdminMap"/>
                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>
                                                                                        <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3 col-sm-4 col-xs-12">
                                                                                            <property name="items">
                                                                                                <list>

                                                                                                    <bean   parent="AdminMap"/>

                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>
                                                                                        <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3 col-sm-4 col-xs-12">
                                                                                            <property name="items">
                                                                                                <list>

                                                                                                    <bean   parent="AdminMap"/>

                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>
                                                                                        <bean   parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-3 col-sm-4 col-xs-12">
                                                                                            <property name="items">
                                                                                                <list>

                                                                                                    <bean   parent="AdminMap"/>

                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>
                                                                                    </list>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>

                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--tams网站导航-->
    <bean id="ClassMap" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-SimpleGroup">
                    <property name="items">
                        <list>
                            <bean parent="Demo-Menu-Researcher-ProposalGroup"/>
                            <bean parent="Demo-Menu-Researcher-AwardGroup"/>
                            <bean parent="Demo-Menu-Researcher-NegotiationGroup"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="Demo-Menu-Researcher-ProposalGroup" parent="Uif-MenuList" p:headerText="Proposals">
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/class?methodToCall=getClassListPage&amp;viewId=ClassView"
                      p:linkText="教学班"/>
                <bean parent="Uif-Link" p:href="http://www.kuali.org"
                      p:linkText="Kuali Website"/>
                <bean parent="Uif-Link" p:href="http://www.kuali.org"
                      p:linkText="Kuali Website"/>
                <bean parent="Uif-SimpleHeaderFour" p:headerText="Lists"/>
                <bean parent="Uif-Link" p:href="http://www.kuali.org"
                      p:linkText="Kuali Website"/>
                <bean parent="Uif-Link" p:href="http://www.kuali.org"
                      p:linkText="Kuali Website"/>
            </list>
        </property>
    </bean>

    <bean id="Demo-Menu-Researcher-AwardGroup" parent="Uif-MenuList" p:headerText="Awards">
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:href="http://www.kuali.org"
                      p:linkText="Kuali Website"/>
            </list>
        </property>
    </bean>

    <bean id="Demo-Menu-Researcher-NegotiationGroup" parent="Uif-MenuList" p:headerText="Negotiations">
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:href="http://www.kuali.org"
                      p:linkText="Kuali Website"/>
            </list>
        </property>
    </bean>

    <bean id="AdminMap" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-SimpleGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-MenuList" p:headerText="Negotiations">
                                <property name="items">
                                    <list>
                                        <!--权限控制Start-->
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/portal/admin?methodToCall=getConsolePage&amp;viewId=AdminView"
                                              p:linkText="控制台(类别管理)"
                                              p:render="@{new cn.edu.cqu.ngtl.service.userservice.impl.UserInfoServiceImpl().hasPermission(#userSession.retrieveObject('user'),'ViewConsolePage')}"/>
                                        <!--权限控制End-->
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getRoleManagerPage&amp;viewId=AdminView"
                                              p:linkText="角色管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getUserRoleManagerPage&amp;viewId=AdminView"
                                              p:linkText="用户管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getPermissionManagementPage&amp;viewId=AdminView"
                                              p:linkText="权限管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getCourseManagerPage&amp;viewId=AdminView"
                                              p:linkText="课程负责人管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getTermManagePage&amp;viewId=AdminView"
                                              p:linkText="批次管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getCourseCategoryPage&amp;viewId=AdminView"
                                              p:linkText="课程类别管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getTaCategoryPage&amp;viewId=AdminView"
                                              p:linkText="助教类别管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getTaskCategoryPage&amp;viewId=AdminView"
                                              p:linkText="任务类别管理"/>
                                        <bean parent="Uif-Link" p:href="@{#ConfigProperties['krad.url']}/admin?methodToCall=getFundsPage&amp;viewId=AdminView"
                                              p:linkText="经费管理"/>

                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>




</beans>