<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:jms="http://www.springframework.org/schema/jms" xmlns:lang="http://www.springframework.org/schema/lang"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:oxm="http://www.springframework.org/schema/oxm"
       xmlns:task="http://www.springframework.org/schema/task" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                           http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
                           http://www.springframework.org/schema/jms
                           http://www.springframework.org/schema/jms/spring-jms-3.0.xsd
                           http://www.springframework.org/schema/lang
                           http://www.springframework.org/schema/lang/spring-lang-3.0.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                           http://www.springframework.org/schema/oxm
                           http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
                           http://www.springframework.org/schema/task
                           http://www.springframework.org/schema/task/spring-task-3.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <!--学生应聘助教-->
    <bean id="ApplyOutStandingTaPage" parent="Uif-VerticalBoxSection" p:additionalCssClasses="container"
          p:onDocumentReadyScript="">
        <property name="items">
            <list>
                <!--页面header-->
                <bean id="applyForTaFormPageHeader" parent="Uif-HorizontalBoxSection"
                      p:additionalCssClasses="content-header">
                    <property name="items">
                        <list>
                            <!-- 左上角 -->
                            <bean id="applyForTaHeaderTitle" parent="Uif-VerticalBoxSection"
                                  p:onDocumentReadyScript="initContentHeader('applyForTaHeaderTitle','fa fa-check-circle','助教','申请优秀助教')">
                            </bean>

                            <!-- 右上角 当前路径 -->
                            <bean   parent="Uif-HorizontalBoxSection"
                                  p:additionalCssClasses="breadcrumb">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Icon" p:iconClass="icon-home myIcon"
                                              p:style="float:left!important;"/>
                                        <bean parent="Uif-InputField">
                                            <property name="control">
                                                <bean parent="Uif-OptionListControl"
                                                      p:additionalCssClasses="breadcrumb"
                                                      p:style="background: transparent!important;">
                                                    <property name="options">
                                                        <list>
                                                            <bean parent="Uif-KeyValueLocation" p:key="1" p:value="主页"
                                                                  p:location.viewId="PortalView" p:location.controllerMapping="/home"
                                                                  p:location.methodToCall="getCommonHome"/>
                                                            <bean parent="Uif-KeyValueLocation" p:key="2" p:value="助教(无链接)"
                                                                  p:location.viewId="ClassView" p:location.controllerMapping="/ta"
                                                                  p:location.methodToCall="getClassListPage"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="3" p:value="申请优秀助教"/>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <!--row 2-->
                <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-12 col-lg-12">
                                <property name="items"  >
                                    <list>
                                        <!--申请表-->
                                        <bean parent="Uif-VerticalBoxSection"
                                              p:additionalCssClasses="box box-info">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Icon" p:iconClass="icon-info"/>
                                                                <bean parent="Uif-MessageField" p:messageText="申请相关信息" p:additionalCssClasses="boxheaderTitle"/>
                                                                <bean parent="Uif-PrimaryActionButton" p:actionLabel="导出PDF"
                                                                      p:methodToCall="exportApplicantPhoto"
                                                                      p:style="float:right!important;font-size:18px;margin-right: 10px;background=orange!important;"
                                                                      p:additionalCssClasses="bg-orange tamsbtn"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-VerticalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-GridGroup"
                                                                      p:layoutManager.numberOfColumns="4"
                                                                      p:style="margin-top:10px">
                                                                    <property name="headerText" value="考核信息"/>
                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="课程名称" p:colSpan="3"
                                                                                  p:fieldLabel.colSpan="1" p:messageText="名称"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="上课教师" p:messageText="教师"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="教学班号" p:messageText="123"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="课程类别" p:messageText="类型"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="学时" p:messageText="64"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="学分" p:messageText="5.0"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="选课人数" p:messageText="400"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="任课校区" p:messageText="虎溪"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="授课年级/专业" p:messageText="2013"/>

                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="助教姓名" p:messageText="abc"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="学历" p:messageText="硕士"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="所在学院" p:messageText="ab数统学院c"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="专业" p:messageText="abc"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="手机号码" p:colSpan="3"
                                                                                  p:fieldLabel.colSpan="1" p:messageText="123456789011"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>

                                                                <bean parent="Uif-Disclosure-TableCollectionSection">
                                                                    <property name="collectionObjectClass" value="cn.edu.cqu.ngtl.viewobject.tainfo.IssueViewObject"/>
                                                                    <property name="propertyName" value="allIssues"/>
                                                                    <property name="layoutManager.renderSequenceField"
                                                                              value="false"/>
                                                                    <property name="layoutManager.richTable.render" value="false"/>

                                                                    <property name="useServerPaging" value="true" />

                                                                    <property name="renderAddLine" value="false"/>
                                                                    <property name="renderLineActions" value="true"/>
                                                                    <property name="readOnly" value="true"/>

                                                                    <property name="disclosure.render" value="false"/>

                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-DataField" p:label="教学日历" p:propertyName="issueType"/>
                                                                            <bean parent="Uif-DataField" p:label="活动次数" p:propertyName="issueCount"/>
                                                                            <bean parent="Uif-DataField" p:label="点赞比" p:propertyName="likeRate"/>
                                                                            <bean parent="Uif-DataField" p:label="学生参与度" p:propertyName="commentCount"/>
                                                                            <bean parent="Uif-DataField" p:label="成绩" p:propertyName="commentCount"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>


                                                                <bean parent="Uif-VerticalBoxSection">
                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-InputField" p:label="申请优秀理由"
                                                                                  p:propertyName="inputField1"
                                                                                  p:style="width:100%;">
                                                                                <property name="control">
                                                                                    <bean parent="Uif-TextAreaControl"
                                                                                          p:style="height:100px;"/>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>

                                                                <bean parent="Uif-HorizontalBoxSection">
                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="提交"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:methodToCall="submitTaForm"
                                                                                  p:successCallback="alert('提交成功，返回测试页面homepage，未来可换成dialog');"
                                                                                  p:id="submitTaFormBtn"
                                                                                  p:additionalCssClasses="icon-arrow-up bg-success tamsbtn"/>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="取消"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:actionScript="alert('取消');"
                                                                                  p:additionalCssClasses="icon-arrow-up bg-orange tamsbtn"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>