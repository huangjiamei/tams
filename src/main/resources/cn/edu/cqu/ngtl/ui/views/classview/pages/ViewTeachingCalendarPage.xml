<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:jms="http://www.springframework.org/schema/jms" xmlns:lang="http://www.springframework.org/schema/lang"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:oxm="http://www.springframework.org/schema/oxm"
       xmlns:task="http://www.springframework.org/schema/task" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                           http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
                           http://www.springframework.org/schema/jms
                           http://www.springframework.org/schema/jms/spring-jms-3.0.xsd
                           http://www.springframework.org/schema/lang
                           http://www.springframework.org/schema/lang/spring-lang-3.0.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                           http://www.springframework.org/schema/oxm
                           http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
                           http://www.springframework.org/schema/task
                           http://www.springframework.org/schema/task/spring-task-3.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="ViewTeachingCalendarPage" parent="Uif-VerticalBoxSection" p:additionalCssClasses="container"
          p:onDocumentReadyScript="setupAutoSideBar();">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection"
                      p:additionalCssClasses="content-header">
                    <property name="items">
                        <list>
                            <!-- 左上角 -->
                            <bean id="viewTeachingCalendarHeaderTitle" parent="Uif-VerticalBoxSection"
                                  p:onDocumentReadyScript="initContentHeader('viewTeachingCalendarHeaderTitle','icon-calendar4','课程','教学日历')">
                            </bean>

                            <!-- 右上角 当前路径 -->
                            <bean id="breadcrumb" parent="Uif-HorizontalBoxSection"
                                  p:additionalCssClasses="breadcrumb">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Icon" p:iconClass="icon-home myIcon"
                                              p:style="float:left!important;"/>
                                        <bean parent="Uif-InputField">
                                            <property name="control">
                                                <bean parent="Uif-OptionListControl"
                                                      p:additionalCssClasses="breadcrumb"
                                                      p:style="background: transparent!important;">
                                                    <property name="options">
                                                        <list>
                                                            <bean parent="Uif-KeyValueLocation" p:key="1" p:value="主页"
                                                                  p:location.viewId="PortalView"
                                                                  p:location.controllerMapping="/home"
                                                                  p:location.methodToCall="getCommonHome"/>
                                                            <bean parent="Uif-KeyValueLocation" p:key="2"
                                                                  p:value="课程"
                                                                  p:location.viewId="ClassView"
                                                                  p:location.controllerMapping="/class"
                                                                  p:location.methodToCall="getClassListPage"/>
                                                            <bean parent="Uif-KeyValueLocation" p:key="3"
                                                                  p:value="教学日历"
                                                                  p:location.viewId="ClassView"
                                                                  p:location.controllerMapping="/class"
                                                                  p:location.methodToCall="getTeachingCalendar"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="4"
                                                                  p:value="查看教学日历"/>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <!--body-->
                <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-12 col-lg-12">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection"
                                              p:additionalCssClasses="box box-info">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Icon" p:iconClass="icon-calendar2"/>
                                                                <bean parent="Uif-MessageField" p:messageText="查看教学日历"
                                                                      p:additionalCssClasses="boxheaderTitle"/>

                                                                <bean parent="Uif-HorizontalBoxSection"
                                                                      p:style="float: right!important;">
                                                                    <property name="items">
                                                                        <list>
                                                                            <!--右上角btnlist-->
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="返回"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:navigateToPageId="pageTeachingCalendar"
                                                                                  p:additionalCssClasses="icon-circle-arrow-left bg-grey tamsbtn">
                                                                            </bean>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="更新"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:navigateToPageId="pageTeachingCalendar"
                                                                                  p:additionalCssClasses="icon-happy bg-success tamsbtn">
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-VerticalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-GridGroup"
                                                                      p:layoutManager.renderRowFirstCellHeader="false">
                                                                    <property name="layoutManager.numberOfColumns"
                                                                              value="4"/>
                                                                    <property name="items">
                                                                        <list><!--messageText要修改相应的-->
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="教学主题"
                                                                                  p:messageText="@{currentCalendarInfo.theme}"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="教学描述"
                                                                                  p:messageText="@{currentCalendarInfo.description}"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="起始时间"
                                                                                  p:messageText="@{currentCalendarInfo.startTime}"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="完成时间"
                                                                                  p:messageText="@{currentCalendarInfo.endTime}"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="助教任务描述"
                                                                                  p:messageText="@{currentCalendarInfo.taTask}"/>
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:label="总耗时"
                                                                                  p:messageText="@{currentCalendarInfo.elapsedTime}"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>

                                                                <bean id="fileTable" parent="Uif-Disclosure-TableCollectionSection"><!--后期改格式-->
                                                                    <property name="collectionObjectClass"
                                                                              value="cn.edu.cqu.ngtl.viewobject.common.FileViewObject"/><!--改动collectionObjectClass和propertyName-->
                                                                    <property name="propertyName" value="calendarFiles"/>
                                                                    <property name="layoutManager.renderSequenceField"
                                                                              value="false"/>
                                                                    <property name="layoutManager.richTable.render" value="false"/>
                                                                    <property name="useServerPaging" value="true" />
                                                                    <property name="renderAddLine" value="false"/>
                                                                    <property name="renderLineActions" value="true"/>
                                                                    <property name="disclosure.render" value="false"/>

                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-Icon" p:iconClass="icon-calendar2"/>
                                                                            <bean parent="Uif-DataField" p:label="文件名称（后期不要title）"
                                                                                  p:propertyName="name"/>
                                                                            <bean parent="Uif-DataField" p:label="大小"
                                                                                  p:propertyName="sizeFormatted"/>
                                                                            <bean parent="Uif-DataField" p:label="上传者姓名"
                                                                                  p:propertyName="uploaderName"/>
                                                                            <bean parent="Uif-DataField" p:label="上传日期"
                                                                                  p:propertyName="uploadDate"
                                                                                  p:sortAs="kuali_date"/>
                                                                            <bean parent="Uif-DataField" p:label="下载次数"
                                                                                  p:propertyName="downloadTimes"/>
                                                                        </list>
                                                                    </property>
                                                                    <property name="lineActions">
                                                                        <list>
                                                                            <bean parent="Uif-VerticalBoxSection">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <bean parent="Uif-PrimaryActionButton"
                                                                                              p:ajaxSubmit="false"
                                                                                              p:actionLabel=""
                                                                                              p:actionImagePlacement="LEFT"
                                                                                              p:methodToCall="downloadCalendarFile"
                                                                                              p:refreshId="fileTable"
                                                                                              p:additionalCssClasses="icon-eye-open bg-btn-blue tamsbtn"/>
                                                                                        <bean parent="Uif-PrimaryActionButton"
                                                                                              p:ajaxSubmit="false"
                                                                                              p:actionLabel=""
                                                                                              p:actionImagePlacement="LEFT"
                                                                                              p:methodToCall="removeCalendarFile"
                                                                                              p:refreshId="fileTable"
                                                                                              p:additionalCssClasses="icon-trash bg-btn-blue tamsbtn"/><!--添加methodToCall-->
                                                                                    </list>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>

                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>

                                        <bean parent="Uif-VerticalBoxSection"
                                              p:additionalCssClasses="box box-success">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Icon" p:iconClass="icon-smile"/>
                                                                <bean parent="Uif-MessageField" p:messageText="教学活动"
                                                                      p:additionalCssClasses="boxheaderTitle"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Disclosure-TableCollectionSection">
                                                                    <property name="collectionObjectClass"
                                                                              value="cn.edu.cqu.ngtl.viewobject.classinfo.TeachCalendarViewObject"/>
                                                                    <property name="propertyName"
                                                                              value="allActivities"/><!--viewobject和propertyName要改-->
                                                                    <property name="layoutManager.renderSequenceField"
                                                                              value="false"/>
                                                                    <property name="layoutManager.richTable.render" value="false"/>
                                                                    <property name="useServerPaging" value="true" />
                                                                    <property name="renderAddLine" value="false"/>
                                                                    <property name="renderLineActions" value="false"/>
                                                                    <property name="disclosure.render" value="false"/>


                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-Icon" p:iconClass="icon-comment"/>
                                                                            <bean parent="Uif-DataField"
                                                                                  p:propertyName="taTask"
                                                                                  p:label="活动类型（后期删去title）"
                                                                                  p:additionalCssClasses="tams-activity-item-title"/>
                                                                            <bean parent="Uif-DataField"
                                                                                  p:propertyName="description"
                                                                                  p:label="描述"
                                                                                  p:additionalCssClasses="tams-activity-item-title"/>
                                                                            <bean parent="Uif-DataField"
                                                                                  p:label="人数"
                                                                                  p:propertyName="code"/>
                                                                            <bean parent="Uif-DataField"
                                                                                  p:label="时间"
                                                                                  p:additionalCssClasses="tams-activity-state"
                                                                                  p:propertyName="theme"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>

                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>