<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:jee="http://www.springframework.org/schema/jee" xmlns:jms="http://www.springframework.org/schema/jms"
       xmlns:lang="http://www.springframework.org/schema/lang" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:oxm="http://www.springframework.org/schema/oxm" xmlns:task="http://www.springframework.org/schema/task"
       xmlns:tx="http://www.springframework.org/schema/tx" xmlns:util="http://www.springframework.org/schema/util"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                           http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
                           http://www.springframework.org/schema/jms
                           http://www.springframework.org/schema/jms/spring-jms-3.0.xsd
                           http://www.springframework.org/schema/lang
                           http://www.springframework.org/schema/lang/spring-lang-3.0.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                           http://www.springframework.org/schema/oxm
                           http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
                           http://www.springframework.org/schema/task
                           http://www.springframework.org/schema/task/spring-task-3.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">
    <bean id="ClassListPage" parent="Uif-VerticalBoxSection"
          p:additionalCssClasses="container"
          p:onDocumentReadyScript="removeSideBar()">
        <property name="items">
            <list>
                <!--header-->
                <bean parent="Uif-HorizontalBoxSection"
                      p:additionalCssClasses="content-header">
                    <property name="items">
                        <list>
                            <!-- 左上角 -->
                            <bean id="classListHeaderTitle" parent="Uif-VerticalBoxSection"
                                  p:onDocumentReadyScript="initContentHeader('classListHeaderTitle','fa fa-book','课程','教学班')">
                            </bean>

                            <!-- 右上角 当前路径 -->
                            <bean parent="Uif-HorizontalBoxSection"
                                  p:additionalCssClasses="breadcrumb">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Icon" p:iconClass="icon-home myIcon"
                                              p:style="float:left!important;"/>
                                        <bean parent="Uif-InputField">
                                            <property name="control">
                                                <bean parent="Uif-OptionListControl"
                                                      p:additionalCssClasses="breadcrumb"
                                                      p:style="background: transparent!important;">
                                                    <property name="options">
                                                        <list>
                                                            <bean parent="Uif-KeyValueLocation" p:key="1" p:value="主页"
                                                                  p:location.viewId="PortalView"
                                                                  p:location.controllerMapping="/home"
                                                                  p:location.methodToCall="getCommonHome"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="2" p:value="课程"/>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                    <property name="items">
                        <list>

                            <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-6 col-lg-6">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="box box-primary">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Icon" p:iconClass="icon-heart"/>
                                                                <bean parent="Uif-Message" p:messageText="d"
                                                                      p:additionalCssClasses="boxheaderTitle"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Image" p:additionalCssClasses="photo"
                                                                      p:source="@{#ConfigProperties['application.url']}/images/user-header-default.jpg"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-6 col-lg-6">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="box box-primary">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Icon" p:iconClass="icon-star"/>
                                                                <bean parent="Uif-Message"
                                                                      p:messageText="Default Message"
                                                                      p:additionalCssClasses="boxheaderTitle"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Image" p:additionalCssClasses="photo"
                                                                      p:source="@{#ConfigProperties['application.url']}/images/user-header-default.jpg"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-12 col-lg-12">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection"
                                              p:additionalCssClasses="box box-info">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>

                                                                <bean parent="Uif-Icon" p:iconClass="icon-list"/>
                                                                <bean parent="Uif-MessageField" p:messageText="教学班列表"
                                                                      p:additionalCssClasses="boxheaderTitle"/>
                                                                <bean parent="Uif-HorizontalBoxSection"
                                                                      p:style="float: right!important;">
                                                                    <property name="items">
                                                                        <list>
                                                                            <!--右上角btnlist-->
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="添加"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:methodToCall="copyxxx"
                                                                                  p:additionalCssClasses="icon-plus bg-success box-btngroup"/>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="驳回"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:methodToCall="copyxxx"
                                                                                  p:actionScript="showDialog('returnDialog');"
                                                                                  p:additionalCssClasses="icon-plus bg-orange box-btngroup"/>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="审批"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:actionScript="showDialog('approveDialog');"
                                                                                  p:additionalCssClasses="icon-plus bg-primary box-btngroup"/>

                                                                            <!--右上角btnlist-->
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="EXCEL"
                                                                                  p:methodToCall="exportClassListExcel"
                                                                                  p:additionalCssClasses="icon-th-list bg-primary box-btngroup"/>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="PDF"
                                                                                  p:methodToCall="exportApplicantPhoto"
                                                                                  p:additionalCssClasses="icon-th bg-orange box-btngroup"/>

                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>

                                                    <bean parent="Uif-VerticalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>

                                                                <bean id="searchClassFields"
                                                                      parent="Uif-HorizontalBoxSection"
                                                                      p:additionalCssClasses="search-fields">
                                                                    <property name="items">
                                                                        <list>
                                                                            <!--占位-->
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:additionalCssClasses="hidden-fields"
                                                                                  p:messageText="占位"/>
                                                                            <!--占位-->
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:additionalCssClasses="hidden-fields"
                                                                                  p:messageText="占位"/>
                                                                            <!--下拉框搜索-->
                                                                            <!--学院-->
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="condDepartmentName">
                                                                                <property name="optionsFinder">
                                                                                    <bean class="cn.edu.cqu.ngtl.optionfinder.classview.departmentFinder"
                                                                                          p:blankOption="true"/>
                                                                                </property>
                                                                                <property name="control">
                                                                                    <bean parent="Uif-DropdownControl"/>
                                                                                </property>
                                                                            </bean>
                                                                            <!--文字搜索-->
                                                                            <!--课程名称-->
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="condCourseName"/>
                                                                            <!--课程编号-->
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="condCourseCode"/>
                                                                            <!--教学班-->
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="condClassNumber"/>
                                                                            <!--教师-->
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="condInstructorName"/>

                                                                            <!--耗费工时-->
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="courseWorkTime"/>
                                                                            <!--状态-->
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="courseStatus">
                                                                                <property name="optionsFinder">
                                                                                    <bean class="cn.edu.cqu.ngtl.optionfinder.adminview.WorkflowFunctionFinder"
                                                                                          p:blankOption="true"/>
                                                                                </property>
                                                                                <property name="control">
                                                                                    <bean parent="Uif-DropdownControl"/>
                                                                                </property>
                                                                            </bean>
                                                                            <!--占位-->
                                                                            <bean parent="Uif-MessageField"
                                                                                  p:additionalCssClasses="hidden-fields"
                                                                                  p:messageText="占位"/>

                                                                            <bean id="searchButton"
                                                                                  parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="查询"
                                                                                  p:additionalCssClasses="icon-search hidden-fields search-button"
                                                                                  p:methodToCall="searchClassByCondition"
                                                                                  p:refreshId="ClassListPage"/>

                                                                        </list>
                                                                    </property>
                                                                </bean>


                                                                <bean id="ClassListPageTable"
                                                                      parent="Uif-Disclosure-TableCollectionSection"
                                                                      p:onDocumentReadyScript="refreshTableFilter(searchClassFields,ClassListPageTable);initRightBtnMenu('ClassListPageTable')">
                                                                    <property name="collectionObjectClass"
                                                                              value="cn.edu.cqu.ngtl.viewobject.classinfo.ClassTeacherViewObject"/>
                                                                    <property name="propertyName" value="classList"/>
                                                                    <property name="layoutManager.renderSequenceField"
                                                                              value="false"/>
                                                                    <property name="layoutManager.richTable.render" value="true"/>

                                                                    <property name="useServerPaging" value="true" />

                                                                    <property name="renderAddLine" value="false"/>
                                                                    <property name="renderLineActions" value="true"/>
                                                                    <property name="disclosure.render" value="false"/>
                                                                    <property name="layoutManager.showToggleAllDetails"
                                                                              value="false"/>

                                                                    <!--在这里后期更改rowDetails的图标-->
                                                                    <property
                                                                            name="layoutManager.expandDetailsActionPrototype">
                                                                        <bean parent="Uif-ExpandDetailsImageAction"/>
                                                                    </property>

                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-InputField"
                                                                                  p:propertyName="checked">
                                                                                <property name="control">
                                                                                    <bean parent="Uif-CheckboxControl"/>
                                                                                </property>
                                                                            </bean>
                                                                            <bean parent="Uif-DataField" p:label="学院"
                                                                                  p:propertyName="departmentName"/>
                                                                            <bean parent="Uif-DataField" p:label="课程名称"
                                                                                  p:propertyName="courseName"
                                                                                  p:sortAs="numeric"/>
                                                                            <bean parent="Uif-DataField" p:label="课程编号"
                                                                                  p:propertyName="courseCode"/>
                                                                            <bean parent="Uif-DataField" p:label="教学班"
                                                                                  p:propertyName="classNumber"
                                                                                  p:sortAs="kuali_date"/>
                                                                            <bean parent="Uif-DataField" p:label="教师"
                                                                                  p:propertyName="instructorName"/>
                                                                            <bean parent="Uif-DataField" p:label="耗费工时"
                                                                                  p:propertyName="workTime"
                                                                                  p:additionalCssClasses="#line.workTime.equals(' ')?' ':'bg-btn-blue tams-form-label'"/>
                                                                            <bean parent="Uif-DataField" p:label="状态"
                                                                                  p:propertyName="status"
                                                                                  p:additionalCssClasses="bg-success tams-form-label"/>

                                                                        </list>
                                                                    </property>

                                                                    <!--rowDetails-->
                                                                    <property name="layoutManager.rowDetailsGroup">
                                                                        <bean parent="Uif-VerticalBoxGroup">
                                                                            <property name="items">
                                                                                <list>

                                                                                    <!--无历史数据时显示，用render来切换-->
                                                                                    <bean parent="Uif-MessageField"
                                                                                          p:render="false"
                                                                                          p:messageText="暂无历史数据"/>


                                                                                    <!--如何改为纵向列表形式待调整-->
                                                                                    <bean parent="Uif-GridGroup"
                                                                                          p:layoutManager.renderRowFirstCellHeader="false">
                                                                                    <property name="layoutManager.numberOfColumns"
                                                                                              value="16"/>
                                                                                        <property name="items">
                                                                                            <list>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="批次" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:labelLeft="false"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="2016秋"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="课程名称" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:labelLeft="false"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="@{#line.courseName}"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="课程编号" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="@{#line.courseCode}"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="教师" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="@{#line.instructorName}"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="批准经费" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="2000"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="博士补贴" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="800"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="奖励经费" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="500"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="实发总计" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="3375"/>

                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="课程介绍" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="学期总结" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="批改作业" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="习题课" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="辅导答疑" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="期中/期末测验" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="指导实验/批改报告" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                                <bean parent="Uif-MessageField"
                                                                                                      p:label="课程论文" p:colSpan="1" p:rowSpan="1"
                                                                                                      p:fieldLabel.colSpan="1"
                                                                                                      p:fieldLabel.rowSpan="1" p:messageText="100"/>
                                                                                            </list>
                                                                                        </property>
                                                                                    </bean>
                                                                                </list>
                                                                            </property>
                                                                        </bean>
                                                                    </property>


                                                                    <property name="lineActions">
                                                                        <list>
                                                                            <bean parent="Uif-VerticalBoxSection">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <bean parent="Uif-PrimaryActionButton"
                                                                                              p:ajaxSubmit="false"
                                                                                              p:actionLabel=""
                                                                                              p:actionImagePlacement="LEFT"
                                                                                              p:methodToCall="getClassInfoPage"
                                                                                              p:additionalCssClasses="icon-eye-open bg-btn-blue tams-form-label"/>
                                                                                    </list>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean id="getTaskDetailBtn" parent="Uif-PrimaryActionButton"
                      p:actionLabel="查看任务详情，此按钮隐藏" p:navigateToPageId="pageTaskList"
                      p:style="display:none"/>
            </list>
        </property>
    </bean>


    <bean id="applicantDeleteConfirmationDialog" parent="Uif-DialogGroup">
        <property name="headerText" value="警告："/>
        <property name="promptText" value="确认要删除考生信息？"/>
        <property name="dialogCssClass" value="confirmDialog"/>
        <property name="footer.items">
            <list>
                <bean parent="Uif-DialogConfirmButton" p:actionLabel="确认"/>
                <bean parent="Uif-DialogDismissButton" p:actionLabel="取消"/>

            </list>
        </property>
    </bean>
    <bean id="returnDialog" parent="Uif-DialogGroup">
        <property name="headerText" value="警告："/>
        <property name="promptText" value="确认要驳回申请助教信息？"/>
        <property name="dialogCssClass" value="confirmDialog"/>
        <property name="footer.items">
            <list>
                <bean parent="Uif-DialogConfirmButton" p:actionLabel="确认"
                      p:methodToCall="reject"  p:dialogDismissOption="REQUEST"/>
                <bean parent="Uif-DialogDismissButton" p:actionLabel="取消"/>

            </list>
        </property>
    </bean>
    <bean id="approveDialog" parent="Uif-DialogGroup">
        <property name="headerText" value="提示："/>
        <property name="promptText" value="确认要批准申请助教信息？"/>
        <property name="dialogCssClass" value="confirmDialog"/>
        <property name="footer.items">
            <list>
                <bean parent="Uif-DialogConfirmButton" p:actionLabel="确认"
                      p:methodToCall="approve"  p:dialogDismissOption="REQUEST"/>
                <bean parent="Uif-DialogDismissButton" p:actionLabel="取消"/>

            </list>
        </property>
    </bean>
</beans>
