	<bean id="UserRoleManagerPage" parent="Uif-VerticalBoxSection">
		<!-- same with 416 -->
		<property name="items">
			<list>
				<bean id="UserRoleManagerPageHeader" parent="Uif-HorizontalBoxSection"
					p:additionalCssClasses="pageHeaderBox">
					<property name="items">
						<list>
							<bean parent="Uif-Icon" p:iconClass="icon-user" />
							<bean parent="Uif-MessageField" p:messageText="用户管理"
								p:additionalCssClasses="headerTitle" p:style="margin-top:3px"/>
						</list>
					</property>
				</bean>
				<bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="box box-info">
					<property name="items">
						<list>
							<bean parent="Uif-HorizontalBoxSection"
								p:additionalCssClasses="box-header">
								<property name="items">
									<list>
										<bean parent="Uif-Icon" p:iconClass="icon-search" />
										<bean parent="Uif-MessageField" p:messageText="用户角色列表"
											p:additionalCssClasses="boxheaderTitle" />
										<bean parent="Uif-HorizontalBoxSection"
											p:additionalCssClasses="rightGroup box-tools" p:style="display:none">
											<property name="items">
												<list>
													<bean parent="Uif-MessageField" p:messageText="学院:"
														p:style="line-height:20px;font-weight:700;margin-top: 5px;" />
													<bean parent="Uif-InputField" p:propertyName="URMsearchDepartmentId">
														<property name="optionsFinder">
															<bean class="cn.edu.cqu.ngtl.optionfinder.UTDepartmentOptionFinder"
																p:blankOption="true" />
														</property>
														<property name="control">
															<bean parent="Uif-DropdownControl" />
														</property>
													</bean>
													<bean parent="Uif-PrimaryActionButton" p:actionLabel="查询"
														p:additionalCssClasses="icon-search btn-flat box-tools"
														p:methodToCall="searchBatchUTInstructors" />
													<bean id="updateUserRoleBtn" parent="Uif-PrimaryActionButton"
														p:actionLabel="修改用户角色" p:navigateToPageId="pageUpdateUserRoleManager"
														p:style="display:none" />
												</list>
											</property>
										</bean>
									</list>
								</property>
							</bean>
					<bean parent="Uif-HorizontalBoxSection" p:additionalCssClasses="box-body">
					    <property name="items">
						  <list>
							   <bean id="UserRoleManagerTable" parent="Uif-TableCollectionSection">
								<property name="collectionObjectClass"
									value="cn.edu.cqu.ngtl.dataobject.ut.UTInstructor" />
								<property name="propertyName" value="URMutInstructors" />
							   <!-- <property name="layoutManager.richTable.render" value="false" />
								<property name="layoutManager.renderSequenceField" value="true" />
								<property name="renderAddLine" value="false" /> -->
								
								<property name="layoutManager.renderSequenceField" value="true" />
								<property name="renderAddLine" value="false" />
								<property name="useServerPaging" value="true" />
								<property name="layoutManager.richTable.render" value="true" />
								<property name="layoutManager.richTable.templateOptions">
									<map merge="true">
										<entry key="sDom" value="&lt;'top't&gt;&lt;'bottom'ilp&gt;" />
										<entry key="sPaginationType" value="full_numbers" />
									</map>
								</property> 
								<property name="items">
									<list>
										<bean parent="Uif-InputField" p:propertyName="department.name" p:readOnly="true"
											p:label="学院" />
										<bean parent="Uif-InputField" p:propertyName="name" p:readOnly="true"
											p:label="姓名" />
										<bean parent="Uif-InputField" p:propertyName="gender"
											p:readOnly="true" p:label="性别" p:readOnlyDisplayReplacement="@{#line.idNumber==null?' ':#line.gender.equals('1')?'男':'女'}" />
										<bean parent="Uif-InputField" p:propertyName="code" p:readOnly="true"
											p:label="工号" />
										<bean parent="Uif-InputField" p:propertyName="idNumber"
											p:readOnly="true" p:label="统一认证号" />
									</list>
								</property>
								<property name="lineActions">
									<list>
										<bean parent="Uif-ActionImage" p:methodToCall="selectURMInstructor"
											p:successCallback="jQuery('#updateUserRoleBtn').click();" p:render="@{#line.idNumber==null? false:true}">
											<property name="actionImage">
												<bean parent="Uif-Image"
													p:source="@{#ConfigProperties['application.url']}/images/edit_enabled.png" />
											</property>
										</bean>
									</list>
								</property>
							  </bean>
							</list>
						   </property>
						</bean>
					  </list>
					</property>
				</bean>
<!--                <bean id="UserRoleManagermentContainer" parent="Uif-HorizontalBoxSection" p:style="display:none">
