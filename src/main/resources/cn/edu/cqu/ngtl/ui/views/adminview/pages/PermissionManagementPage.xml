<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:jms="http://www.springframework.org/schema/jms" xmlns:lang="http://www.springframework.org/schema/lang"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:oxm="http://www.springframework.org/schema/oxm"
       xmlns:task="http://www.springframework.org/schema/task" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                           http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
                           http://www.springframework.org/schema/jms
                           http://www.springframework.org/schema/jms/spring-jms-3.0.xsd
                           http://www.springframework.org/schema/lang
                           http://www.springframework.org/schema/lang/spring-lang-3.0.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                           http://www.springframework.org/schema/oxm
                           http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
                           http://www.springframework.org/schema/task
                           http://www.springframework.org/schema/task/spring-task-3.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="PermissionManagementPage" parent="Uif-VerticalBoxSection" p:additionalCssClasses="container">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection"
                      p:additionalCssClasses="content-header">
                    <property name="items">
                        <list>
                            <!-- 左上角 -->
                            <bean id="permissionMaHeaderTitle" parent="Uif-VerticalBoxSection"
                                  p:onDocumentReadyScript="initContentHeader('permissionMaHeaderTitle','fa fa-tachometer','管理台','权限管理')">
                            </bean>

                            <!-- 右上角 当前路径 -->
                            <bean parent="Uif-HorizontalBoxSection"
                                  p:additionalCssClasses="breadcrumb">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Icon" p:iconClass="icon-home myIcon"
                                              p:style="float:left!important;"/>
                                        <bean parent="Uif-InputField">
                                            <property name="control">
                                                <bean parent="Uif-OptionListControl"
                                                      p:additionalCssClasses="breadcrumb"
                                                      p:style="background: transparent!important;">
                                                    <property name="options">
                                                        <list>
                                                            <bean parent="Uif-KeyValueLocation" p:key="1" p:value="主页"
                                                                  p:location.viewId="PortalView"
                                                                  p:location.controllerMapping="/home"
                                                                  p:location.methodToCall="getCommonHome"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="2"
                                                                  p:value="权限管理"/>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <!--body-->
                <!--课程类别管理表格-->
                <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-lg-12 col-md-12">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection"
                                              p:additionalCssClasses="box box-info">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Icon" p:iconClass="fa fa-list"/>
                                                                <bean parent="Uif-MessageField" p:messageText="权限列表"
                                                                      p:additionalCssClasses="boxheaderTitle"/>
                                                                <bean parent="Uif-HorizontalBoxSection"
                                                                      p:style="float: right!important;">
                                                                    <property name="items">
                                                                        <list>
                                                                            <!--右上角btnlist-->
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="添加"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:methodToCall="addPermissionDialog"
                                                                                  p:additionalCssClasses="icon-plus bg-success box-btngroup">
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>

                                                    <bean parent="Uif-VerticalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>
                                                                <!--table-->
                                                                <bean parent="Uif-Disclosure-TableCollectionSection">
                                                                    <property name="collectionObjectClass"
                                                                              value="cn.edu.cqu.ngtl.dataobject.krim.KRIM_PERM_T" />
                                                                    <property name="propertyName" value="RMPkrimPermTs" />
                                                                    <property name="layoutManager.richTable.render"
                                                                              value="true"/>

                                                                    <!--下面第一行打开每列开头的1,2,3...序号，第二行作用未知-->
                                                                    <property name="layoutManager.renderSequenceField"
                                                                              value="true"/>
                                                                    <property name="layoutManager.generateAutoSequence"
                                                                              value="true"/>
                                                                    <!--打开useServerPaging会报js error？？-->
                                                                    <property name="useServerPaging" value="true"/>

                                                                    <property name="renderAddLine" value="false"/>
                                                                    <property name="renderLineActions" value="true"/>
                                                                    <property name="disclosure.render" value="false"/>

                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-InputField" p:propertyName="name"
                                                                                  p:readOnly="true" p:label="权限名称" />
                                                                            <bean parent="Uif-InputField" p:propertyName="description"
                                                                                  p:readOnly="true" p:label="权限内容" />
                                                                            <bean parent="Uif-InputField" p:propertyName="active"
                                                                                  p:label="权限状态" p:readOnly="true">
                                                                                <property name="control">
                                                                                    <bean parent="Uif-DropdownControl">
                                                                                        <property name="options">
                                                                                            <list>
                                                                                                <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="可用" />
                                                                                                <bean parent="Uif-KeyLabelPair" p:key="N" p:value="失效" />
                                                                                            </list>
                                                                                        </property>
                                                                                    </bean>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                    <property name="lineActions">
                                                                        <list>
                                                                            <bean parent="Uif-HorizontalBoxSection">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <bean parent="Uif-PrimaryActionButton"
                                                                                              p:methodToCall="updateKrimPerm"
                                                                                              p:additionalCssClasses="icon-pencil bg-btn-green tams-action-btn"/>
                                                                                        <bean parent="Uif-PrimaryActionButton"
                                                                                              p:additionalCssClasses="icon-trash bg-btn-red tams-action-btn">
                                                                                            <property name="confirmationDialog">
                                                                                                <ref bean="deletePermissionDialog" />
                                                                                            </property>
                                                                                        </bean>
                                                                                    </list>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="savePermissionDialog" parent="Uif-DialogGroup"
          p:headerText="添加权限"  p:retrieveViaAjax="true"
          p:onDocumentReadyScript="jQuery('#savePermissionDialog').modal({backdrop: 'static', keyboard: false});">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="请慎重添加权限，如需添加请联系系统维护人员！" />
                <bean parent="Uif-GridGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:label="权限名称"
                                  p:propertyName="permissionNM"/>
                            <bean parent="Uif-InputField" p:label="权限内容"
                                  p:propertyName="permissionContent"/>
                            <bean parent="Uif-InputField" p:label="权限状态" p:propertyName="permissionStatus">
                                <property name="optionsFinder">
                                    <bean class="cn.edu.cqu.ngtl.optionfinder.IsActiveFinder"
                                          p:blankOption="false" />
                                </property>
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" />
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer.items">
            <list>
                <bean parent="Uif-DialogDismissButton" p:actionLabel="取消" />
                <bean parent="Uif-PrimaryActionButton" p:actionLabel="确定"
                      p:methodToCall="savePermission"  p:dialogDismissOption="REQUEST" />
            </list>
        </property>
    </bean>


    <bean id="deletePermissionDialog" parent="Uif-DialogGroup"
          p:headerText="删除权限" p:retrieveViaAjax="true">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="请慎重删除权限，如需删除请联系系统维护人员！" />
            </list>
        </property>
        <property name="footer.items">
            <list>
                <bean parent="Uif-DialogDismissButton" p:actionLabel="取消" />
                <bean parent="Uif-PrimaryActionButton" p:actionLabel="确定"
                      p:methodToCall="deletePermission"  p:dialogDismissOption="REQUEST" />
            </list>
        </property>
    </bean>
</beans>