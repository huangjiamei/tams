<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:jms="http://www.springframework.org/schema/jms" xmlns:lang="http://www.springframework.org/schema/lang"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:oxm="http://www.springframework.org/schema/oxm"
       xmlns:task="http://www.springframework.org/schema/task" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                           http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
                           http://www.springframework.org/schema/jms
                           http://www.springframework.org/schema/jms/spring-jms-3.0.xsd
                           http://www.springframework.org/schema/lang
                           http://www.springframework.org/schema/lang/spring-lang-3.0.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                           http://www.springframework.org/schema/oxm
                           http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
                           http://www.springframework.org/schema/task
                           http://www.springframework.org/schema/task/spring-task-3.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="AddTeachCalendarPage" parent="Uif-VerticalBoxSection" p:additionalCssClasses="container"
          p:onDocumentReadyScript="setupAutoSideBar()">
        <property name="items">
            <list>
                <!--header-->
                <bean parent="Uif-HorizontalBoxSection"
                      p:additionalCssClasses="content-header">
                    <property name="items">
                        <list>
                            <!-- 左上角 -->
                            <bean id="headerTitle" parent="Uif-VerticalBoxSection"
                                  p:onDocumentReadyScript="initContentHeader('headerTitle','icon-book','课程','教学日历')">
                            </bean>


                            <!-- 右上角 当前路径 -->
                            <bean parent="Uif-HorizontalBoxSection"
                                  p:additionalCssClasses="breadcrumb">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Icon" p:iconClass="icon-home myIcon"
                                              p:style="float:left!important;"/>
                                        <bean parent="Uif-InputField">
                                            <property name="control">
                                                <bean parent="Uif-OptionListControl"
                                                      p:additionalCssClasses="breadcrumb"
                                                      p:style="background: transparent!important;">
                                                    <property name="options">
                                                        <list>
                                                            <bean parent="Uif-KeyValueLocation" p:key="1" p:value="主页"
                                                                  p:location.viewId="PortalView" p:location.controllerMapping="/home"
                                                                  p:location.methodToCall="getCommonHome"/>
                                                            <bean parent="Uif-KeyValueLocation" p:key="2" p:value="课程"
                                                                  p:location.viewId="ClassView" p:location.controllerMapping="/class"
                                                                  p:location.methodToCall="getClassListPage"/>
                                                            <bean parent="Uif-KeyValueLocation" p:key="3" p:value="教学日历"
                                                                  p:location.viewId="ClassView" p:location.controllerMapping="/class"
                                                                  p:location.methodToCall="getTeachingCalendar"/>
                                                            <bean parent="Uif-KeyLabelPair" p:key="4" p:value="新建教学日历"/>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <!--body-->
                <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="row">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:additionalCssClasses="col-md-12 col-lg-12">
                                <property name="items"  >
                                    <list>
                                        <bean parent="Uif-VerticalBoxSection"
                                              p:additionalCssClasses="box box-info">
                                            <property name="items">
                                                <list>
                                                    <!--box header:小图标小标题+右上角btn-->
                                                    <bean parent="Uif-HorizontalBoxSection"
                                                          p:additionalCssClasses="box-header">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-Icon" p:iconClass="icon-calendar2"/>
                                                                <bean parent="Uif-MessageField" p:messageText="新建教学日历"
                                                                      p:additionalCssClasses="boxheaderTitle"/>
                                                                <!--<bean parent="Uif-HeaderThree" p:headerText="任务信息"/>-->

                                                                <bean parent="Uif-HorizontalBoxSection"
                                                                      p:style="float: right!important;">
                                                                    <property name="items">
                                                                        <list>
                                                                            <!--右上角btnlist-->
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="返回"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:navigateToPageId="pageTeachingCalendar"
                                                                                  p:additionalCssClasses="icon-circle-arrow-left bg-grey tamsbtn">
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>

                                                    <bean parent="Uif-VerticalBoxSection"
                                                          p:additionalCssClasses="box-body">
                                                        <property name="items">
                                                            <list>

                                                                <bean parent="Uif-InputField" p:label="教学主题"
                                                                      p:additionalCssClasses="col-xs-12 col-sm-12 col-md-12 col-lg-12"
                                                                      p:propertyName="teachCalendar.theme"
                                                                      p:required="true">
                                                                    <!-- 注意，要添加提示文本就必须加一个property：controll然后写watermarktext-->
                                                                    <!--在inputField里用p:control.watermarkText没有效果-->
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextControl"
                                                                              p:watermarkText="请输入计划的教学内容，如章节等"/>
                                                                    </property>
                                                                </bean>

                                                                <bean parent="Uif-InputField" p:label="教学描述"
                                                                      p:propertyName="teachCalendar.description"
                                                                      p:additionalCssClasses="col-xs-12 col-sm-12 col-md-12 col-lg-12"
                                                                      p:required="true"
                                                                      p:style="margin-top:20px">
                                                                    <!-- 注意，要添加提示文本就必须加一个property：controll然后写watermarktext-->
                                                                    <!--在inputField里用p:control.watermarkText没有效果-->
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextAreaControl"
                                                                              p:watermarkText="请输入计划的教学目的与要求，教学重点与难点、教学方法、教学设计环节等"
                                                                              p:style="height:200px;resize:vertical;"/>
                                                                    </property>
                                                                </bean>

                                                                <bean parent="Uif-InputField" p:label="助教任务"
                                                                      p:propertyName="teachCalendar.taTask"
                                                                      p:additionalCssClasses="col-xs-12 col-sm-12 col-md-12 col-lg-12"
                                                                      p:required="true"
                                                                      p:style="margin-top:20px">
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextAreaControl"
                                                                              p:style="height:200px;resize:vertical;"
                                                                              p:watermarkText="请输入在本次计划中拟分配给助教的工作种类及次数，包括：批改(作业、实验报告、试卷、课程论文、读书报告等)、答疑、组织讨论课、习题课、指导实验、签到、设计提问、设计问卷"/>
                                                                    </property>
                                                                </bean>


                                                                <bean id="timeSet"
                                                                      parent="Uif-HorizontalBoxSection">
                                                                    <property name="onDocumentReadyScript"
                                                                              value="
                                                                             jQuery('#newAddTdateTimeRange input').daterangepicker({timePicker: true,
                                                                                                                     timePicker12Hour: false,
                                                                                                                     timePickerIncrement: 1,
                                                                                                                     format: 'YYYY-MM-DD HH:mm',
                                                                                                                     separator: '~',
                                                                                                                     minDate: moment().startOf('day'),
                                                                                                                     locale:
                                                                                                                     {
                                                                                                                     applyLabel : '确定',
                                                                                                                     cancelLabel : '取消',
                                                                                                                     fromLabel : '起始时间：',
                                                                                                                     toLabel : '结束时间：',
                                                                                                                     daysOfWeek : [ '日', '一', '二', '三', '四', '五', '六' ],
                                                                                                                     monthNames : [ '一月', '二月', '三月', '四月', '五月', '六月',
                                                                                                                                    '七月', '八月', '九月', '十月', '十一月', '十二月' ],
                                                                                                                     firstDay:1
                                                                                                                     }
                                                                                                                     });
                                                                            "/>
                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-HorizontalBoxSection" p:style="margin-top:20px">
                                                                                <property name="items">
                                                                                    <list>
                                                                                        <!--起始时间、结束时间的范围、总耗时-->
                                                                                        <bean parent="Uif-MessageField" p:messageText="时间范围：" p:additionalCssClasses="messageStyle" />
                                                                                        <bean id="newAddTdateTimeRange"
                                                                                              parent="Uif-InputField"
                                                                                              p:style="width:250px;"
                                                                                              p:required="true"
                                                                                              p:propertyName="addTeachCTime"
                                                                                              p:additionalCssClasses="dateTimeInput"/>
                                                                                        <bean parent="Uif-MessageField" p:messageText="总耗时：" p:additionalCssClasses="messageStyle" />
                                                                                        <bean parent="Uif-InputField" p:propertyName="teachCalendar.elapsedTime" p:required="true">
                                                                                            <property name="validCharactersConstraint">
                                                                                                <bean parent="NumericPatternConstraint"/>
                                                                                            </property>
                                                                                        </bean>
                                                                                    </list>
                                                                                </property>
                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>

                                                                <!--多文件上传器模板-->
                                                                <bean parent="Uif-HorizontalBoxSection"
                                                                      p:style="margin-top:20px"
                                                                      p:additionalCssClasses="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-MultiFileUploadCollection"
                                                                                  p:addFilesButtonText="添加文件">
                                                                                <property name="collection.propertyName" value="fileList"/>
                                                                                <property name="collection.collectionObjectClass"
                                                                                          value="cn.edu.cqu.ngtl.viewobject.common.FileViewObject"/>
                                                                                <!--FIXME: 重写这个methodToCall来实现自定义添加文件-->
                                                                                <!--<property name="methodToCall" value="addFileUploadLine"/>-->
                                                                                <property name="collection.items">
                                                                                    <list>
                                                                                        <bean parent="Uif-LinkField" p:readOnly="true" p:label="文件" p:link.linkText="@{#line.name}"
                                                                                              p:link.href="@{#line.url}&amp;selectedLineIndex=@{#index}" p:link.target="_blank"/>
                                                                                        <bean parent="Uif-InputField" p:readOnly="true" p:label="大小" p:propertyName="sizeFormatted"/>
                                                                                        <bean parent="Uif-InputField" p:readOnly="true" p:label="上传日期"
                                                                                              p:propertyName="dateUploadedFormatted"/>
                                                                                    </list>
                                                                                </property>
                                                                                <property name="collection.lineActions">
                                                                                    <list>
                                                                                        <!--FIXME: 重写这个methodToCall来实现自定义删除文件-->
                                                                                        <bean parent="Uif-SecondaryActionButton" p:methodToCall="deleteFileUploadLine"
                                                                                              p:title="Delete"
                                                                                              p:onMouseOverScript="deleteLineMouseOver(this, 'uif-collectionDeleteHighlight');"
                                                                                              p:onMouseOutScript="deleteLineMouseOut(this, 'uif-collectionDeleteHighlight');"
                                                                                              p:onClickScript="writeCurrentPageToSession(this);" p:dirtyOnAction="true"
                                                                                              p:loadingMessageText="正在删除...">
                                                                                            <property name="cssClasses">
                                                                                                <list merge="true">
                                                                                                    <value>icon-trash</value>
                                                                                                </list>
                                                                                            </property>
                                                                                        </bean>
                                                                                    </list>
                                                                                </property>

                                                                            </bean>
                                                                        </list>
                                                                    </property>
                                                                </bean>


                                                                <!--btn list-->
                                                                <bean parent="Uif-HorizontalBoxSection">
                                                                    <property name="items">
                                                                        <list>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="创建"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:methodToCall="submitTeachCalendarPage"
                                                                                  p:additionalCssClasses="icon-plus-sign bg-success box-btngroup"/>
                                                                            <bean parent="Uif-PrimaryActionButton"
                                                                                  p:actionLabel="创建并继续"
                                                                                  p:actionImagePlacement="LEFT"
                                                                                  p:methodToCall="submitThenContinue"
                                                                                  p:additionalCssClasses="icon-arrow-right bg-teal box-btngroup"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>